package(
    default_visibility = ["//visibility:public"],
)

load(
    "@rules_java//java:defs.bzl",
    "java_library",
    "java_plugin",
)
load(
    "//tools/defs/micronaut:cli.bzl",
    "MICRONAUT_CLI_DEPS",
    "MICRONAUT_CLI_PROCESSOR_DEPS",
    "MICRONAUT_CLI_PROCESSORS",
)

[
    java_plugin(
        name = n.split(".")[-1],
        generates_api = True,
        processor_class = n,
        deps = MICRONAUT_CLI_DEPS + MICRONAUT_CLI_PROCESSOR_DEPS,
    )
    for n in MICRONAUT_CLI_PROCESSORS
]

java_library(
    name = "cli",
    exported_plugins = [":%s" % n.split(".")[-1] for n in MICRONAUT_CLI_PROCESSORS],
    exports = MICRONAUT_CLI_DEPS,
)
