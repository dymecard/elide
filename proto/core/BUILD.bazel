## Core
model(
    name = "crypto",
    srcs = ["crypto.proto"],
    deps = [
        ":datamodel",
    ],
)

model(
    name = "data",
    srcs = ["data.proto"],
    deps = [
        ":crypto",
        ":datamodel",
    ],
)

model(
    name = "datamodel",
    srcs = ["datamodel.proto"],
    deps = [
        "@com_google_protobuf//:descriptor_proto",
    ],
)
