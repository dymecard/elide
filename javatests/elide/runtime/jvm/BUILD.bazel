package(
    default_visibility = ["//visibility:public"],
)

load(
    "//tools/defs/java:java.bzl",
    "java_library",
    "maven",
)
load(
    "//tools/defs/model:model.bzl",
    "javaproto",
)
load(
    "//tools/defs/java/testing:junit5.bzl",
    "java_junit5_test",
)

_COMMON_DEPS = [
    maven("org.slf4j:slf4j-api"),
]

exports_files([
    "assets.pb",
])

java_junit5_test(
    name = "AssetManagerTest",
    srcs = ["AssetManagerTest.java"],
    test_package = "elide.runtime.jvm",
    deps = [
        javaproto("//elide/proto/assets:bundle"),
        "//java/elide/runtime/jvm:AssetManager",
        maven("ch.qos.logback:logback-classic"),
    ] + _COMMON_DEPS,
    classpath_resources = [
        ":assets.pb",
    ],
)

java_junit5_test(
    name = "AssetManagerFailTest",
    srcs = ["AssetManagerFailTest.java"],
    test_package = "elide.runtime.jvm",
    deps = [
        "//java/elide/runtime/jvm:AssetManager",
        maven("ch.qos.logback:logback-classic"),
    ] + _COMMON_DEPS,
)

java_junit5_test(
    name = "LoggingTest",
    srcs = ["LoggingTest.java"],
    test_package = "elide.runtime.jvm",
    deps = [
        "//java/elide/runtime/jvm:logging",
        "//java/elide/runtime:logging",
        maven("ch.qos.logback:logback-classic"),
        maven("javax.annotation:javax.annotation-api"),
    ] + _COMMON_DEPS,
)

java_junit5_test(
    name = "ReactiveFutureTest",
    srcs = ["ReactiveFutureTest.java"],
    test_package = "elide.runtime.jvm",
    deps = [
        "//java/elide/runtime/jvm:reactive",
        maven("com.google.guava:guava"),
        maven("com.google.api:gax"),
        maven("com.google.api:api-common"),
        maven("io.reactivex.rxjava2:rxjava"),
        maven("org.reactivestreams:reactive-streams"),
    ] + _COMMON_DEPS,
)

test_suite(
    name = "jvm",
    tests = [
        ":AssetManagerTest",
        ":AssetManagerFailTest",
        ":LoggingTest",
        ":ReactiveFutureTest",
    ],
)
