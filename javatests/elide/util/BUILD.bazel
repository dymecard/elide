package(
    default_visibility = ["//visibility:public"],
)


load(
    "//tools/defs/java/testing:junit5.bzl",
    "java_junit5_test",
)

TARGETS = [
    "Hex",
    "InstantFactory",
    "Pair",
]

EXTRA_DEPS = {
    "InstantFactory": [
        "@com_google_protobuf//java/core",
    ],
}

[
    java_junit5_test(
        name = "%sTest" % c,
        srcs = ["%sTest.java" % c],
        deps = ["//java/elide/util:%s" % c] + EXTRA_DEPS.get(c, []),
        test_package = "elide.util",
    ) for c in TARGETS
]


test_suite(
    name = "util",
    tests = [":%sTest" % c for c in TARGETS],
)
